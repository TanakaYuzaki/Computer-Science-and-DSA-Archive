#include <iostream>
#include <string>

using namespace std;
int main(){
    string sentence;
    getline(cin, sentence);
    int pointer = sentence.length()-1;
    int saved_pointer_left = 0;
    int result = 0;
    while(pointer >= 0){
        char letter = sentence[pointer];
        if(isalpha(letter)){
            int pointer_left = pointer-1;
            while((isalpha(sentence[pointer_left]))){
                pointer_left--;
            }
            saved_pointer_left = pointer_left;
            break;
        }
        pointer--;

    }
    result = pointer-saved_pointer_left;
    cout<<result;
}
